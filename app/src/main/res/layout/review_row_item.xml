<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
>

    <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olivia M"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5/5"
            android:textSize="14sp"
            android:textColor="@color/black"
/>

    <TextView
            android:id="@+id/review_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay okay, there's a lot of hype here and can kinda understand why. This stand is one of the first you'll encounter once you enter grand central market btw..."
            android:textSize="14sp"
            android:textColor="@color/black"

            android:layout_marginTop="12dp"/>

    <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-09-10"
            android:textSize="14sp"
            android:textColor="@color/black"

            android:layout_marginTop="7dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>

    </LinearLayout>
